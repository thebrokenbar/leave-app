<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.meterohead.leave.leavelist.LeaveListViewModel"/>
    </data>
    <android.support.design.widget.CoordinatorLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:items="@{viewModel.itemsList}"
            android:onClick="@{viewModel.onItemClickListener}"
            android:layout_width="match_parent"
            android:id="@+id/rvLeaveList" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:onClick="@{(view) -> viewModel.onAddLeaveClick(view)}"
            android:visibility="@{viewModel.fabVisibility}"
            app:fabSize="normal"
            android:id="@+id/fabAddLeave"
            app:srcCompat="@drawable/ic_add_white_24dp"
            android:layout_gravity="bottom|right"/>
    </android.support.design.widget.CoordinatorLayout>
</layout>