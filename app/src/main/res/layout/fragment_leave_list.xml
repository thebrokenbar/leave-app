<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.meteorhead.leave.leavelist.LeaveListViewModel"/>
        <import type="android.view.View" />
    </data>
    <android.support.design.widget.CoordinatorLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:visibility="@{viewModel.itemsList == null ? View.VISIBLE : View.GONE}"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/progressBar2"
            android:padding="120dp"/>

        <android.support.v7.widget.RecyclerView
            android:visibility="@{viewModel.itemsList != null ? View.VISIBLE : View.GONE}"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:items="@{viewModel.itemsList}"
            android:onClick="@{viewModel.onItemClickListener}"
            app:viewModel="@{viewModel}"
            android:layout_width="match_parent"
            android:id="@+id/rvLeaveList" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:onClick="@{() -> viewModel.onAddLeaveClick()}"
            android:visibility="@{!viewModel.selectionMode &amp;&amp; viewModel.itemsList != null}"
            app:fabSize="normal"
            android:id="@+id/fabAddLeave"
            app:srcCompat="@drawable/ic_add_white_24dp"
            android:layout_gravity="bottom|right"/>
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:onClick="@{() -> viewModel.onRemoveLeaveClick()}"
            android:visibility="@{viewModel.selectionMode}"
            app:fabSize="normal"
            android:id="@+id/fabRemoveLeave"
            app:srcCompat="@drawable/ic_delete_white_24dp"
            android:layout_gravity="bottom|right"/>
    </android.support.design.widget.CoordinatorLayout>
</layout>