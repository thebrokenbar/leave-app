<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.meteorhead.leave.bestleaves.BestLeavesViewModel" />
        <import type="com.meteorhead.leave.Constants"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:padding="8dp">
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.SeekBar"
                android:max="@{Constants.MAX_LEAVE_DAYS}"/>
                <!--android:progress="@={viewModel.days}"-->
            <EditText
                android:id="@+id/etDays"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:inputType="number"/>
                <!--android:text="@={viewModel.days}" -->
        </LinearLayout>

        <ListView
            app:items="@{viewModel.leaves}"
            android:id="@+id/lvBestLeavesList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
</layout>